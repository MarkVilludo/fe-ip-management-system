# Base URL that the frontend uses when issuing requests.
# Keep the default "/api" to rely on the Vite proxy, or set it to a fully
# qualified URL when bypassing the proxy (e.g., production builds).
VITE_API_BASE_URL=/api

# URLs for the backend services. These are consumed by the Vite dev proxy so
# the frontend can automatically forward API calls to the correct containers.
VITE_AUTH_SERVICE_URL=http://127.0.0.1:8000
VITE_IP_SERVICE_URL=http://127.0.0.1:8001

# Optional gateway (or load balancer) URL. Falls back to the auth service when
# unset, but is broken out here to support deployments where the gateway is a
# separate host or port (e.g., https://api-auth-service.local.com:8443).
VITE_GATEWAY_URL=http://127.0.0.1:8000
